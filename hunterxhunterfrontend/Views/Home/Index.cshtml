@model List<hunterxhunterfrontend.Models.hxhmodel>

@{
    ViewData["Title"] = "HXH";
    var containersecret = ViewData["containersecret"] as string;
    var secretfromkeyvault = ViewData["secretfromkeyvault"] as string;
}

<h1>@ViewData["Title"]</h1>

@if (Model == null || !Model.Any())
{
    <p>No data available.</p>
}
else
{


    <center>
        <img src="https://th.bing.com/th/id/OIP.L8X9Fu_8W7m0JFMdqXgoLQHaEK?w=262&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7" alt="Placeholder Image" style="width: 400px; height: 300px; border-radius: 300px%;" />
        <img src="https://raw.githubusercontent.com/globalazure/communities/main/2024/azugfr/azugfr.png" alt="Placeholder Image" style="width: 400px; height: 300px; border-radius: 300px%;" />

    </center>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Secret from Key Vault:</h2>
                <p>@secretfromkeyvault</p>
            </div>
            <div class="col-md-6">
                <h2>secrets:</h2>
                <p>@containersecret</p>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Picture</th> <!-- Move Picture column to the beginning -->
                <th>Display Name</th>
                <th>Power</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hunters in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(hunters.ImageURL))
                        {
                            <img src="@hunters.ImageURL" alt="Character Image" style="width: 90px; height: 90px; border-radius: 90%;" />
                        }
                        else
                        {
                            <img src="https://th.bing.com/th/id/OIP.L8X9Fu_8W7m0JFMdqXgoLQHaEK?w=262&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7" alt="Placeholder Image" style="width: 15px; height: 15px; border-radius: 15px%;" />
                        }
                    </td>
                    <td>@hunters.Name</td>
                    <td>@hunters.Superpower</td>
                </tr>
            }
        </tbody>
    </table>
}
