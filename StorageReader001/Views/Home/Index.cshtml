@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="display-4 text-center">Read Files</h1>

    <div class="row">
        <div class="col-md-12">
            <h2>Images</h2>
            <div class="row">
                @foreach (var imageFile in ViewBag.ImageFiles)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="@Url.Action("GetImage", new { fileName = imageFile })" class="card-img-top" alt="Image">
                            <div class="card-body">
                                <p class="card-text text-center">@imageFile</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>PDF Files</h2>
            <ul class="list-group">
                @foreach (var pdfFile in ViewBag.PdfFiles)
                {
                    <li class="list-group-item">
                        <a href="@Url.Action("GetPdf", new { fileName = pdfFile })" target="_blank">@pdfFile</a>
                    </li>
                    <li class="list-group-item">
                        <iframe src="@Url.Action("GetPdf", new { fileName = pdfFile })" class="pdf-iframe" width="100%" height="600"></iframe>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<style>
    /* Additional CSS styles for responsiveness and aesthetics */
    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .pdf-iframe {
        border: 1px solid #ccc;
    }
</style>
